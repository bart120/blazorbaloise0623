@page "/cars/list"
@using ServicesLibrary.Models;
@using ServicesLibrary.Services;


@inject CarsService servCars

<h3>Liste des voitures</h3>
@if(cars !=  null){
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Modèle</th>
            <th scope="col">Prix</th>
            <th scope="col">Date de circulation</th>
            <th scope="col" colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in cars)
        {
            <tr>
                <td scope="row">@car.Model</td>
                <td>@car.Price</td>
                <td>@car.DateOfCirculation.ToShortDateString()</td>
                <td><NavLink class="btn btn-secondary" href="@($"cars/detail/{car.ID}")">Voir</NavLink></td>
                <td><button class="btn btn-warning">Suppr.</button></td>
            </tr>
        }
    </tbody>
</table>
}

@code {
    private List<Car>? cars;

    protected override async Task OnInitializedAsync()
    {
        this.cars = await servCars.GetAllAsync();
    }
}
